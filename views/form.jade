extends layout 

block content 
  form(action="/new", method="post")
    .author-name-input.input-field
      label(for="author-name") Name
      input#author-name(type="text", placeholder="Your Name" name="author")
    .message-input.input-field
      label(for="message") Message
      input#message(type="text", placeholder="Your Message" name="message")
    button(type="submit") Send Message